<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#1E8301">

  <Button
    android:id="@+id/multipleGuestButton"
    style="@android:style/Widget.DeviceDefault.Light.Button"
    android:layout_width="wrap_content"
    android:layout_height="47dp"
    android:layout_marginStart="135dp"
    android:layout_marginLeft="135dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:text="Multiple Guest Event"
    android:textColor="@android:color/background_dark"
    android:textColorLink="@android:color/background_dark"
    android:textSize="14sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toEndOf="@+id/backButton"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/backButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:text="Back"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/guestNameText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="90dp"
    android:layout_marginLeft="90dp"
    android:layout_marginTop="48dp"
    android:layout_marginEnd="99dp"
    android:layout_marginRight="99dp"
    android:ems="10"
    android:hint="Guest Name"
    android:inputType="none"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/multipleGuestButton"
    android:background="#FFFFFF"/>

  <EditText
    android:id="@+id/reasonText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="90dp"
    android:layout_marginLeft="90dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="99dp"
    android:layout_marginRight="99dp"
    android:background="#FFFFFF"
    android:ems="10"
    android:hint="Reason"
    android:inputType="none"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/guestNameText" />

  <EditText
    android:id="@+id/startDateText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="90dp"
    android:layout_marginLeft="90dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="99dp"
    android:layout_marginRight="99dp"
    android:background="#FFFFFF"
    android:ems="10"
    android:hint="Start Date"
    android:inputType="date"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/reasonText" />

  <EditText
    android:id="@+id/endDateText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="90dp"
    android:layout_marginLeft="90dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="99dp"
    android:layout_marginRight="99dp"
    android:background="#FFFFFF"
    android:ems="10"
    android:hint="End Date"
    android:inputType="date"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/startDateText" />

  <CheckBox
    android:id="@+id/indefiniteCheckBox"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="56dp"
    android:layout_marginLeft="56dp"
    android:layout_marginTop="24dp"
    android:checked="false"
    android:text="Indefinite"
    android:textSize="24sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/endDateText" />

  <Button
    android:id="@+id/submitButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="256dp"
    android:layout_marginLeft="256dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="67dp"
    android:layout_marginRight="67dp"
    android:text="Submit"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/endDateText" />

</android.support.constraint.ConstraintLayout>
